<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav>
    <ul>
      <li>
        <%= link_to "Home", root_path %>
      </li>
      <!-- we only want to show this link if the user is logged in -->
      <% if logged_in? %>
        <li>
          <%= link_to 'Add a restaurant', new_restaurant_path %>
        </li>
        <li>
          <%= link_to "(#{current_user.name}) Log Out", session_path(current_user), method: :delete  %>
        </li>

      <%else %>
      <!-- else we show the visitor the signup and login page -->
        <li>
          <%= link_to "Sign Up", new_user_path %>
        </li>
        <li>
          <%= link_to "Log in", new_session_path%>
        </li>
      <% end %>
    </ul>
  </nav>

<%= yield %>

</body>
</html>
